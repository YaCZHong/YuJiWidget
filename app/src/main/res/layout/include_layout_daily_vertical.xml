<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_daily"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="逐日天气"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorF4F4F4" />

        <LinearLayout
            android:id="@+id/ll_day_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/day_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Monday"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/day_1_iv"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_samsung_sun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/day_1_temp_max"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_1_temp_min"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/day_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Tuesday"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/day_2_iv"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_samsung_sun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/day_2_temp_max"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_2_temp_min"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/day_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="Wednesday"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/day_3_iv"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_samsung_sun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/day_3_temp_max"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_3_temp_min"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/day_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Thursday"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/day_4_iv"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_samsung_sun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/day_4_temp_max"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_4_temp_min"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/day_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Friday"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/day_5_iv"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_samsung_sun" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/day_5_temp_max"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="0°/ "
                    android:textColor="#424242"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/day_5_temp_min"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:paddingBottom="16dp"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>