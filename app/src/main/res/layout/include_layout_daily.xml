<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_daily"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="逐日天气"
            android:textColor="@color/colorTextDark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorF4F4F4" />

        <LinearLayout
            android:id="@+id/ll_day_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="--/--"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_day1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="多云转阴"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tv_day1_tmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°/"
                    android:textColor="#424242"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_day1_tmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="--/--"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_day2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="多云转阴"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/tv_day2_tmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°/"
                    android:textColor="#424242"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_day2_tmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="--/--"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_day3_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="多云转阴"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/tv_day3_tmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°/"
                    android:textColor="#424242"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_day3_tmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="--/--"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_day4_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="多云转阴"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/tv_day4_tmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°/"
                    android:textColor="#424242"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_day4_tmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_day_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="--/--"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_day5_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="多云转阴"
                android:textColor="@color/colorTextDark2nd"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingEnd="12dp"
                android:gravity="center_vertical|end">

                <TextView
                    android:id="@+id/tv_day5_tmp_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0°/"
                    android:textColor="#424242"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_day5_tmp_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="#757575"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorF4F4F4" />

        <RelativeLayout
            android:id="@+id/rl_daily_more"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_daily_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="查看更多信息"
                android:textColor="@color/colorTextDark"
                android:textStyle="bold"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/tv_daily_more"
                android:padding="4dp"
                android:src="@mipmap/ic_right" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>